<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_post_delete"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:behavior_peekHeight="200dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <View
            android:layout_width="40dp"
            android:layout_height="6dp"
            android:id="@+id/view_row"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="20dp"
            android:background="@drawable/backgroud_row"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:id="@+id/tv_post_share"
            style="@style/Size16.Black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="14dp"
            android:text="공유하기..."
            app:layout_constraintTop_toBottomOf="@id/view_row" />

        <TextView
            android:id="@+id/tv_copy_link"
            style="@style/Size16.Black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="14dp"
            android:text="링크 복사"
            app:layout_constraintTop_toBottomOf="@id/tv_post_share" />

        <TextView
            android:id="@+id/tv_delete_post"
            style="@style/Size16.Black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="14dp"
            android:text="삭제"
            app:layout_constraintTop_toBottomOf="@id/tv_copy_link" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>